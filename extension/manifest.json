{
    "manifest_version": 3,
    "name": "00000 - W",
    "description": "Woah",
    "version": "1.0.0",

    "optional_host_permissions": [
        "<all_urls>"
    ],
    "permissions": [
        "unlimitedStorage",
        "storage",
        "activeTab"
    ],
    "web_accessible_resources":[{
        "resources": ["/app/*", "/assets/*"],
        "matches": ["<all_urls>"]
    }],
    "icons": {
        "16": "./assets/images/icon16.png",
        "48": "./assets/images/icon16.png",
        "128": "./assets/images/icon16.png"
    },
    "background": {
        "service_worker": "./background/background.js",
        "type": "module"
    },
    "action": {
        "default_icon": "./assets/images/icon16.png",
        "default_popup": "./app/popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["./app/content/content.js", "./app/content/loadFonts.js"],
            "css": ["./app/content/css/content.css"],
            "run_at": "document_end"
        }
    ]
}